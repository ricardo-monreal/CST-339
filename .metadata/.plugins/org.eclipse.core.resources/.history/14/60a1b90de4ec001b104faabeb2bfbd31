<html xmlns:th="http://www.thymeleaf.org">

<head>
</head>
<body>
	<h2>Login with Username and Password</h2>
	<form action="/orders.html" th:action="@{doLogin}" th:object="${loginModel}" method="POST">
		<table>
			<tr>
				<td>User Name:</td><td><input type="text" th:field="*{username}" ></td><<td><h1 style="color: red;" th:if="${#fields.hasErrors('username')}" th:errors="*{username}">User Name error</h1></td>
			</tr>
			<tr>
				<td>Password:</td><td><input type="password" th:field="*{password}" ></td><td><h1 style="color: red;" th:if="${#fields.hasErrors('password')}" th:errors="*{password}">User Name error</h1></td>
			</tr>
			<tr>
				<td colspan="2"><input type="submit" value="Submit"/></td>
			</tr>
		</table>
		<div th:if="${#fields.hasErrors('*')}">List of Errors</div> 
		<div th:each="err : ${fields.errors('*')}">
			<span style="color: red;" th:text="${err}" class="fieldErrors"></span>
		</div>
			
			
		
	</form>
	
</body>


</html>